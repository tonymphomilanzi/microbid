{
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "^(?!/api/).*$", "dest": "/index.html" }
  ],
  "rewrites": [
    { "source": "/api/admin/(.*)", "destination": "/api/admin" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]

}

