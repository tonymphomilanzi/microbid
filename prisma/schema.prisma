generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ListingStatus {
  ACTIVE
  INACTIVE
  SOLD
}

enum UserRole {
  USER
  ADMIN
}

enum UserTier {
  FREE
  PRO
  VIP
}

model User {
  id        String   @id
  email     String
  username   String?  @unique
  avatarUrl String?  //
  createdAt DateTime @default(now())
  lastActiveAt DateTime? //online offline

  role       UserRole  @default(USER)
  isVerified Boolean   @default(false)
  verifiedAt DateTime?

  tier UserTier @default(FREE)

  listings  Listing[]
  purchases Purchase[] @relation("buyerPurchases")
  sales     Purchase[] @relation("sellerSales")

  buyerConversations  Conversation[] @relation("buyerConversations")
  sellerConversations Conversation[] @relation("sellerConversations")
  messages            Message[]

  subscription UserSubscription?

  upgradeRequests UpgradeRequest[]

  lastFeedSeenAt DateTime?
  feedPosts       FeedPost[]

  feedLikes     FeedPostLike[]
  feedComments  FeedComment[]

  listingLikes     ListingLike[]
  listingComments  ListingComment[]

  listingBids ListingBid[]

  notifications Notification[]

  streamVideos StreamVideo[] @relation("adminStreamVideos")

  sitePages SitePage[]

}


model FeedPost {
  id        String   @id @default(cuid())
  title     String
  body      String
  image     String?
  category  String?
  tags      String[] @default([]) // ["NEW","UPDATE","CHANGELOG"]

  authorId  String
  author    User     @relation(fields: [authorId], references: [id])

  // NEW
  likes     FeedPostLike[]
  comments  FeedComment[]

  views FeedPostView[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt



  @@index([createdAt])
  @@index([authorId])
}


model Listing {
  id          String       @id @default(cuid())
  title       String
  platform    String       // keep as String for compatibility
  price       Int
  description String
  image       String
  metrics     Json?
  status      ListingStatus @default(ACTIVE)

  //more images
  images String[] @default([])

  categoryId  String?
  category    Category?     @relation(fields: [categoryId], references: [id])

  sellerId    String
  seller      User         @relation(fields: [sellerId], references: [id])

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  purchases   Purchase[]
  conversations Conversation[]
  escrowTransactions EscrowTransaction[]

  likes     ListingLike[]
  comments  ListingComment[]

  views ListingView[]
  bids ListingBid[]


   // NEW
  income  Int? // e.g. 500 = $500/month (nullable if unknown)
  expense Int? // e.g. 120 = $120/month


  biddingClosed     Boolean @default(false)
  acceptedBidId     String?
  acceptedBidderId  String?
  acceptedBidAmount Int?

  discountPercent   Int?    // NEW (optional; use for Streaming Kit products)

}

model Purchase {
  id        String  @id @default(cuid())
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id])

  buyerId String
  buyer   User   @relation("buyerPurchases", fields: [buyerId], references: [id])

  sellerId String
  seller   User   @relation("sellerSales", fields: [sellerId], references: [id])

  amount          Int
  stripeSessionId String?
  createdAt       DateTime @default(now())

  @@index([buyerId])
  @@index([sellerId])
  @@index([listingId])
}

model Conversation {
  id        String  @id @default(cuid())
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id])

  buyerId String
  buyer   User   @relation("buyerConversations", fields: [buyerId], references: [id])

  sellerId String
  seller   User   @relation("sellerConversations", fields: [sellerId], references: [id])

  messages Message[]

  // NEW: unread + ordering
  buyerUnread   Int       @default(0)
  sellerUnread  Int       @default(0)
  lastMessageAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([listingId, buyerId, sellerId])
  @@index([buyerId])
  @@index([sellerId])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId String
  sender   User   @relation(fields: [senderId], references: [id])

  text      String
  createdAt DateTime @default(now())

  @@index([conversationId])
  @@index([senderId])
}

model UsageMonth {
  id                   String   @id @default(cuid())
  userId               String
  monthKey             String // "2026-01"
  listingsCreated      Int      @default(0)
  conversationsStarted Int      @default(0)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@unique([userId, monthKey])
  @@index([userId])
}

enum BillingType {
  FREE
  MONTHLY
  LIFETIME
}

model Plan {
  id           String      @id @default(cuid())
  name         String      @unique // "FREE" | "PRO" | "VIP"
  billingType  BillingType @default(FREE)

  // pricing (cents). For FREE keep 0, for VIP use oneTimePriceCents
  monthlyPriceCents Int    @default(0)
  oneTimePriceCents Int    @default(0)

  // Admin-editable limits/features
  features     Json        // { listingsPerMonth: 3, conversationsPerMonth: 10, ... }

  // UI
  tagline      String?
  highlight    Boolean     @default(false)
  order        Int         @default(0)

  isActive     Boolean     @default(true)
  createdAt    DateTime    @default(now())

  subscriptions UserSubscription[]
}

enum UpgradeRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model UpgradeRequest {
  id            String               @id @default(cuid())
  userId        String
  user          User                 @relation(fields: [userId], references: [id], onDelete: Cascade)

  requestedPlan String               // "PRO" | "VIP"
  status        UpgradeRequestStatus @default(PENDING)

  note          String?
  createdAt     DateTime             @default(now())
  decidedAt     DateTime?
  decidedBy     String?              // admin uid

  @@index([userId])
  @@index([status])
}



model UserSubscription {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  planId String
  plan   Plan   @relation(fields: [planId], references: [id])

  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  BTC
  MOMO
  MANUAL
}

enum EscrowMode {
  FASTEST
  SAFEST
}

enum EscrowStatus {
  INITIATED
  FEE_PAID
  FULLY_PAID
  AWAITING_SELLER_ASSIGN_ESCROW
  ESCROW_ASSIGNED
  BUYER_ASSIGNED_MANAGER
  WAITING_7_DAYS
  READY_FOR_FINAL_TRANSFER
  AWAITING_BUYER_PAYMENT_TO_SELLER
  AWAITING_SELLER_CONFIRMATION
  TRANSFERRED_TO_BUYER
  RELEASED
  DISPUTED
  REFUNDED
  CANCELLED
}

model EscrowTransaction {
  id        String  @id @default(cuid())
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id])

  buyerId       String
  sellerId      String
  escrowAgentId String // admin/system account uid

  mode     EscrowMode
  provider PaymentProvider
  status   EscrowStatus    @default(INITIATED)

  priceCents  Int
  feeBps      Int
  feeCents    Int
  minFeeCents Int
  discounts   Json?

  totalChargeCents Int

  fundedAt DateTime?

  // 7-day control-panel rule timer
  ownershipReadyAt DateTime?

  // buyer not clicking "received" fallback timer AFTER transfer
  autoReleaseAt DateTime?

  releasedAt DateTime?

  providerRef String?
  notes       String?

  proofs EscrowProof[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([buyerId])
  @@index([sellerId])
  @@index([listingId])
}

enum ProofKind {
  PAYMENT_PROOF
  OWNERSHIP_TRANSFER_PROOF
  EMAIL_CHANGE_PROOF
  OTHER
}

model EscrowProof {
  id       String            @id @default(cuid())
  escrowId String
  escrow   EscrowTransaction @relation(fields: [escrowId], references: [id], onDelete: Cascade)

  kind      ProofKind
  url       String?
  note      String?
  createdAt DateTime  @default(now())

  @@index([escrowId])
}

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  isAdminOnly Boolean  @default(false) // "Streaming Kit" => true
  createdAt   DateTime @default(now())

  listings Listing[]
}

enum AdPlacement {
  HOME_HERO
  HOME_MID
  MARKETPLACE_TOP
  LISTING_DETAILS_SIDEBAR
  DASHBOARD_TOP
}

enum AdType {
  IMAGE
  SPECIAL
  ADSENSE_SNIPPET
}

model Ad {
  id        String      @id @default(cuid())
  placement AdPlacement
  type      AdType

  title     String?
  imageUrl  String?
  linkUrl   String?
  html      String?     // optional Adsense snippet later

  isActive  Boolean     @default(true)
  priority  Int         @default(0)
  startAt   DateTime?
  endAt     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([placement])
}

model Platform {
  id        String   @id @default(cuid())
  name      String   // "YouTube"
  slug      String   @unique // "youtube"
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

//feed comment like
model FeedPostLike {
  id        String   @id @default(cuid())

  postId    String
  post      FeedPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

model FeedComment {
  id        String   @id @default(cuid())

  postId    String
  post      FeedPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  body      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postId, createdAt])
  @@index([authorId])
}

//Listing Like comment
model ListingLike {
  id        String   @id @default(cuid())

  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([listingId, userId])
  @@index([listingId])
  @@index([userId])
}

model ListingComment {
  id        String   @id @default(cuid())

  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  body      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([listingId, createdAt])
  @@index([authorId])
}

//views

model ListingView {
  id        String   @id @default(cuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  viewerKey String   // "u:<uid>" or "d:<deviceId>"
  createdAt DateTime @default(now())

  @@unique([listingId, viewerKey])
  @@index([listingId])
  @@index([viewerKey])
}

model FeedPostView {
  id        String   @id @default(cuid())
  postId    String
  post      FeedPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  viewerKey String
  createdAt DateTime @default(now())

  @@unique([postId, viewerKey])
  @@index([postId])
  @@index([viewerKey])
}

//bidding

model ListingBid {
  id        String   @id @default(cuid())

  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  bidderId  String
  bidder    User     @relation(fields: [bidderId], references: [id], onDelete: Cascade)

  amount    Int
  createdAt DateTime @default(now())

  @@index([listingId, createdAt])
  @@index([bidderId])
  @@index([listingId, amount])
}

model AppConfig {
  id String @id
  escrowAgentUid String?
  escrowFeeBps   Int @default(200)
  companyBtcAddress String?
  companyBtcNetwork String?
  companyBtcQrUrl   String? //QR CODE
  companyMomoName String?
  companyMomoNumber String?
  companyMomoCountry String?
  companyWuName String?
  companyWuCountry String?
  companyWuCity String?
  companyBankName String?
  companyBankAccountName String?
  companyBankAccountNumber String?
  companyBankSwift String?
  companyBankCountry String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      String
  title     String
  body      String?
  url       String?
  meta      Json?
  isRead    Boolean  @default(false)

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([userId, isRead])
}

//streamVideos
model StreamVideo {
  id            String   @id @default(cuid())
  title         String
  caption       String?
  coverImageUrl String
  videoUrl      String

  viewsCount    Int      @default(0)
  isActive      Boolean  @default(true)

  createdById   String
  createdBy     User     @relation("adminStreamVideos", fields: [createdById], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  views         StreamVideoView[]

  @@index([createdAt])
  @@index([isActive, createdAt])
  @@index([createdById])
}

model StreamVideoView {
  id        String      @id @default(cuid())
  streamId  String
  stream    StreamVideo @relation(fields: [streamId], references: [id], onDelete: Cascade)

  viewerKey String      // "u:<uid>" or "d:<deviceId>"
  createdAt DateTime    @default(now())

  @@unique([streamId, viewerKey])
  @@index([streamId])
  @@index([viewerKey])
}


model SitePage {
  id          String   @id @default(cuid())
  slug        String   @unique            // e.g. "terms", "privacy-policy"
  title       String
  body        String   @default("")       // store as plain text/markdown
  isPublished Boolean  @default(true)

  updatedById String?
  updatedBy   User?    @relation(fields: [updatedById], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isPublished, updatedAt])
}