generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


enum ListingStatus {
  ACTIVE
  INACTIVE
  SOLD
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id        String   @id // firebase uid
  email     String
  createdAt DateTime @default(now())

  role       UserRole @default(USER)
  isVerified Boolean  @default(false)
  verifiedAt DateTime?

  listings  Listing[]
  purchases Purchase[] @relation("buyerPurchases")
  sales     Purchase[] @relation("sellerSales")

  buyerConversations  Conversation[] @relation("buyerConversations")
  sellerConversations Conversation[] @relation("sellerConversations")
  messages Message[]

  subscription UserSubscription?
}

model Listing {
  id          String       @id @default(cuid())
  title       String
  platform    String
  price       Int
  description String
  image       String
  metrics     Json?
  status      ListingStatus @default(ACTIVE)

  sellerId    String
  seller      User         @relation(fields: [sellerId], references: [id])

  buyerId     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  purchases   Purchase[]
  
  conversations Conversation[]
  escrowTransactions EscrowTransaction[]
}

model Purchase {
  id              String   @id @default(cuid())
  listingId       String
  listing         Listing  @relation(fields: [listingId], references: [id])

  buyerId         String
  buyer           User     @relation("buyerPurchases", fields: [buyerId], references: [id])

  sellerId        String
  seller          User     @relation("sellerSales", fields: [sellerId], references: [id])

  amount          Int
  stripeSessionId String?
  createdAt       DateTime @default(now())

  @@index([buyerId])
  @@index([sellerId])
  @@index([listingId])
}


model Conversation {
  id        String   @id @default(cuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id])

  buyerId   String
  buyer     User     @relation("buyerConversations", fields: [buyerId], references: [id])

  sellerId  String
  seller    User     @relation("sellerConversations", fields: [sellerId], references: [id])

  messages  Message[]

  // NEW: unread + ordering
  buyerUnread   Int      @default(0)
  sellerUnread  Int      @default(0)
  lastMessageAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([listingId, buyerId, sellerId])
  @@index([buyerId])
  @@index([sellerId])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])

  text           String
  createdAt      DateTime @default(now())

  @@index([conversationId])
  @@index([senderId])
}


model UsageMonth {
  id               String   @id @default(cuid())
  userId           String
  monthKey         String   // "2026-01"
  listingsCreated  Int      @default(0)
  conversationsStarted Int  @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([userId, monthKey])
  @@index([userId])
}


model Plan {
  id        String   @id @default(cuid())
  name      String   @unique // FREE, PREMIUM
  features  Json     // { listingsPerMonth: 3, conversationsPerMonth: 10 }
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  subscriptions UserSubscription[]
}

model UserSubscription {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  planId    String
  plan      Plan     @relation(fields: [planId], references: [id])

  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum PaymentProvider {
  STRIPE
  PAYPAL
  BTC
  MOMO
  MANUAL
}

enum EscrowStatus {
  INITIATED
  FUNDED
  DELIVERED
  RELEASED
  DISPUTED
  REFUNDED
  CANCELLED
}

model EscrowTransaction {
  id          String          @id @default(cuid())
  listingId   String
  listing     Listing         @relation(fields: [listingId], references: [id])

  buyerId     String
  sellerId    String

  amount      Int
  currency    String          @default("USD")

  provider    PaymentProvider
  status      EscrowStatus    @default(INITIATED)

  fundedAt    DateTime?
  deliveredAt DateTime?
  releasedAt  DateTime?

  autoReleaseAt DateTime?     // for “auto release after X days”
  providerRef String?
  notes       String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([buyerId])
  @@index([sellerId])
  @@index([listingId])
}